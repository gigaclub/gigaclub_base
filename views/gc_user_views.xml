<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="gc_user_tree_view">
            <field name="name">gc.user.tree.view</field>
            <field name="model">gc.user</field>
            <field name="arch" type="xml">
                <tree string="Translations">
                    <field name="name" />
                    <field name="mc_uuid" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="gc_user_form_view">
            <field name="name">gc.user.from.view</field>
            <field name="model">gc.user</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="mc_uuid" />
                        <field name="state" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gc_user_action">
            <field name="name">User</field>
            <field name="res_model">gc.user</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gc_menu_user" parent="gc_menu_root" action="gc_user_action" name="Users" />

    </data>
</odoo>
